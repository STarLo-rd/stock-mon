{
  "name": "market-crash-monitor",
  "version": "1.0.0",
  "description": "Real-time market crash monitoring system with alerts",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed-all": "tsx src/db/seeder/index.ts",
    "db:seed-indices": "tsx src/db/seeder/seed-indices.ts",
    "db:seed-stocks": "tsx src/db/seeder/seed-stocks.ts",
    "db:seed-mf": "tsx src/db/seeder/seed-mutual-funds.ts",
    "db:seed-usa": "tsx src/db/seeder/seed-usa.ts",
    "db:cleanup-alerts": "npx tsx src/db/cleanup-redundant-alerts.ts",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "market",
    "crash",
    "monitor",
    "alerts",
    "stocks"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "@types/winston": "^2.4.4",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "redis": "^4.6.10",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "drizzle-kit": "^0.20.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
